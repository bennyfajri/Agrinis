<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agrinis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_darkgray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationViewTextStyle_active" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/airbnb_book</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationViewTextStyle_inactive" parent="BottomNavigationViewTextStyle_active">
        <item name="android:textSize">12sp</item>
    </style>

